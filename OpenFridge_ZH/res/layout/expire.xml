<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/foodDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:paddingBottom="4px"
        android:paddingTop="4px"
    />

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:textSize="20sp"
        android:onClick="EditPostponeClick"
        android:text="@string/EditPost_button" >
    </Button>

    <TextView 
        android:id="@+id/deletePanelTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/deletePanelTitle"
        android:textColor="#FFFFFF"
        android:textSize="25sp" 
    />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Item_disposed"
            android:textAppearance="?android:attr/textAppearanceLarge" 
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Item_consumed"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RadioGroup>
    
    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Send_Shopping"
        android:textAppearance="?android:attr/textAppearanceLarge" >
    </CheckBox>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button2"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:textSize="20sp"            
            android:onClick="DoneClick"
            android:text="@string/deleteItemButtonTitle" >
        </Button>

        <Button
            android:id="@+id/button3"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:textSize="20sp"  
            android:onClick="CancelClick"
            android:text="@string/Cancel_button" >
        </Button>
    </LinearLayout>

</LinearLayout>